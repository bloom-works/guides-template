<meta name="google-site-verification" content="{{ metadata.googlesitevertification }}" />
<title>{{ title or metadata.title }}</title>
<meta content='{{ title or metadata.title }} ' name='twitter:title'/>
<meta content='{{ title or metadata.title }} ' name='og:title'/>
<meta content='{{ description or metadata.description }}' name='description'/>
<meta content='{{ description or metadata.description }}' name='twitter:description'/>
<meta content='{{ description or metadata.description }}' name='og:description'/>
<meta content='summary_large_image' name='twitter:card'/>
<meta content='{{ metadata.nav.logo }}' name='twitter:image'/>
<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
<link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
<link rel="icon" type="image/x-icon" href="{{ metadata.nav.logo }}" />
<meta content='{{ metadata.robots }}' name='robots'/>
